doctype html
head
  title Edit item form
  style.
    input{
    padding: 10px;
    }
    button{
        background-color: black;
        color: White;
        border-radius: 10px;
        padding: 20px;
        font-size: 15px;
        margin-right: 2%;
        }
h1 Edit Item form
form(action='/editdata' method='post' enctype="multipart/form-data")
  input(type='text' name='food' placeholder='Enter the food item' disabled value=edititem.name )
  br
  input(type='number' name='servedcapacity' placeholder='Served capacity' value=edititem.servedcapacity )
  br
  input(type='number' name='price' placeholder='Enter the price' value=edititem.price)
  br
  input(type='text' name='remarks' placeholder='Enter the remarks' value=edititem.remarks)
  br
  input(type='text' name='location' placeholder='Enter the location' value=edititem.location)
  br
  button Edit item
br
form(action="/home" )
  button Home